@page "/imc"


<h3>IMC</h3>

<label>Informe a sua altura: </label>
<input @bind="altura" class="form-control"/>
<br/>

<label>Informe seu peso: </label>
<input @bind="peso" class="form-control" />
<br/>

<button @onclick="CaucularIMC" class="btn btn-primary">Calcular IMC</button>
<br/>
<br/>

<label>Seu IMC É: @imc</label>

<br/>
<br/>

<table class="table">

    <tr>
        <td>IMC</td>
        <td>Classificação</td>
    </tr>

    <tr>
        <td>Menor do que 16</td>
        <td>Magreza grau III</td>
    </tr>

    <tr>
        <td>16,0 até 16,9</td>
        <td>Magreza grau II</td>
    </tr>

    <tr>
        <td>17,0 até 18,4</td>
        <td>Magreza grau I</td>
    </tr>

    <tr>
        <td>18,5 até 24,9</td>
        <td>Normal</td>
    </tr>

    <tr>
        <td>25,0 até 29,9</td>
        <td>Pré-Obesidade</td>
    </tr>

    <tr>
        <td>30,0 até 34,9</td>
        <td>Obesidade grau I</td>
    </tr>

    <tr>
        <td>35,0 até 398,9</td>
        <td>Obesidade grau II</td>
    </tr>

    <tr>
        <td>Acima de 40</td>
        <td>Obesidade grau III</td>
    </tr>

</table>

@code {
    double altura;
    double peso;
    double imc;

    void CaucularIMC()
    {
        imc = peso / (altura * altura);
    }

}
